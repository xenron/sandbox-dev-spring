<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:util="http://www.springframework.org/schema/util"
xmlns:context="http://www.springframework.org/schema/context" 
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd  
http://www.springframework.org/schema/util 
http://www.springframework.org/schema/util/spring-util-3.0.xsd
http://www.springframework.org/schema/context 
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:property-placeholder location="classpath:geym/dg/ch6/ph/prop.properties" 
   ignore-unresolvable="true"
   properties-ref="localProp" local-override="true"/>   
        
   <bean id="helloWorld" class="geym.dg.ch6.ph.HelloWorld">
       <property name="message" value="${hello}"/>
   </bean>

	<util:properties local-override="true" id="localProp">
		<prop key="hello">hello in local</prop>
	</util:properties>
</beans>